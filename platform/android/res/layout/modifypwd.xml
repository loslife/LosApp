<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
 <include 
        android:layout_height="50.0dip"
    layout="@layout/main_header" /> 
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" 
        android:background="@color/base_bg"
        android:layout_weight="1">
       <RelativeLayout
            android:id="@+id/relativelayout_modfiypwd"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginTop="24.0dip"
            android:background="@color/white">
        <TextView android:id="@+id/oldpwdtext"
                  android:layout_width="90.0dip"
                  android:layout_height="48.0dip"
                  android:textSize="20.0dip"
                  android:gravity="center"
                  android:textColor="@color/gray_text"
                  android:text="当前密码"/>
        <View
                android:layout_width="1px"
                android:layout_height="48.0dip"
                android:layout_toRightOf="@id/oldpwdtext"
                android:background="@color/lightgray" />
        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/oldpwdtext"
            android:gravity="center_vertical"
            android:textSize="16.0dip"
            android:hint="输入当前密码"
            android:textColorHint="@color/lightgray"
            android:inputType="textPassword" />
        </RelativeLayout>
        
       
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginTop="12.0dip"
            android:background="@color/white">
        <TextView android:id="@+id/newpasswordtext"
                  android:layout_width="90.0dip"
                  android:layout_height="48.0dip"
                  android:textSize="20.0dip"
                  android:gravity="center"
                  android:textColor="@color/gray_text"
                  android:text="新密码"/>
        <View
                android:layout_width="1px"
                android:layout_height="48.0dip"
                android:layout_toRightOf="@id/newpasswordtext"
                android:background="@color/lightgray" />
        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/newpasswordtext"
            android:gravity="center_vertical"
            android:textSize="16.0dip"
            android:hint="输入新密码"
            android:textColorHint="@color/lightgray"
            android:inputType="textPassword" />
        </RelativeLayout>
        
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginTop="12.0dip"
            android:background="@color/white">
        <TextView android:id="@+id/confirm_newpasswordtext"
                  android:layout_width="90.0dip"
                  android:layout_height="48.0dip"
                  android:textSize="20.0dip"
                  android:gravity="center"
                  android:textColor="@color/gray_text"
                  android:text="确认密码"/>
        <View
                android:layout_width="1px"
                android:layout_height="48.0dip"
                android:layout_toRightOf="@id/confirm_newpasswordtext"
                android:background="@color/lightgray" />
        <EditText
            android:id="@+id/confirm_newpassword"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/confirm_newpasswordtext"
            android:gravity="center_vertical"
            android:textSize="16.0dip"
            android:hint="再次输入新密码"
            android:textColorHint="@color/lightgray"
            android:inputType="textPassword" />
        </RelativeLayout>

        <TextView
        android:id="@+id/btn_modifypwd"
        android:layout_width="300.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="24.0dip"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:text="完成"
        android:textSize="24.0dip"
        android:textColor="@android:color/white" />
        
    </LinearLayout>

</LinearLayout>