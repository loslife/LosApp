<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:gravity="center|center_vertical"
    android:orientation="vertical" >

    <include
        android:layout_height="50.0dip"
        layout="@layout/main_header" />

    <LinearLayout 
        android:id="@+id/checkvcodelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" 
        android:background="@color/base_bg"
        android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/relativelayout_modfiypwd"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="24.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/usernametext"
            android:layout_width="90.0dip"
            android:layout_height="48.0dip"
            android:gravity="center"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:drawableTop="@drawable/username" />

        <View
            android:layout_width="1px"
            android:layout_height="48.0dip"
            android:layout_toRightOf="@id/usernametext"
            android:background="@color/lightgray" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/usernametext"
            android:gravity="center_vertical"
            android:hint="输入手机号"
            android:inputType="phone"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/black_text"
            android:textSize="16.0dip" 
            android:textCursorDrawable="@null"
            android:background="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_modfiypwd"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="24.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/pwdtext"
            android:layout_width="90.0dip"
            android:layout_height="48.0dip"
            android:gravity="center"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:drawableTop="@drawable/password" />

        <View
            android:layout_width="1px"
            android:layout_height="48.0dip"
            android:layout_toRightOf="@id/pwdtext"
            android:background="@color/lightgray" />

        <EditText
            android:id="@+id/et_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pwdtext"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/lightgray"
            android:textColor="@color/black_text"
            android:textSize="16.0dip" 
            android:textCursorDrawable="@null"
            android:background="@color/white"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativelayout_modfiypwd"
        android:layout_width="fill_parent"
        android:layout_height="24.0dip"
        android:layout_marginTop="24.0dip"
      >
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="106.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="忘记密码"
            style="@android:style/TextAppearance.Medium" 
            android:textColor="@color/blue_text" 
            android:drawableLeft="@drawable/forgotpwd"/>
         <View
            android:layout_width="106.0dip"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_text" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_marginTop="24.0dip"
        android:gravity="center" >
    <TextView
        android:id="@+id/btn_signin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login_btn"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="登录"
        style="@android:style/TextAppearance.Medium" 
        android:textColor="@color/white" />
    <ProgressBar
            android:id="@+id/loginingbar"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_alignLeft="@+id/btn_signin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:gravity="center"
            android:indeterminate="true" />
    </RelativeLayout>

    </LinearLayout>



</LinearLayout>