<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <include
        android:layout_height="50.0dip"
        layout="@layout/main_header" />

    <LinearLayout 
        android:id="@+id/checkvcodelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" 
        android:background="@color/base_bg"
        android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/relativelayout_modfiypwd"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="24.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/usernametext"
            android:layout_width="90.0dip"
            android:layout_height="48.0dip"
            android:gravity="center"
            android:drawableTop="@drawable/username" />

        <View
            android:layout_width="1px"
            android:layout_height="48.0dip"
            android:layout_toRightOf="@id/usernametext"
            android:background="@color/lightgray" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/usernametext"
            android:gravity="center_vertical"
            android:hint="输入手机号"
            android:inputType="textPassword"
            android:textColorHint="@color/lightgray"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_modfiypwd"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginTop="24.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/pwdtext"
            android:layout_width="90.0dip"
            android:layout_height="48.0dip"
            android:gravity="center"
            android:drawableRight="@drawable/password" />

        <View
            android:layout_width="1px"
            android:layout_height="48.0dip"
            android:layout_toRightOf="@id/pwdtext"
            android:background="@color/lightgray" />

        <EditText
            android:id="@+id/et_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/pwdtext"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/lightgray"
            android:textSize="16.0dip" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativelayout_modfiypwd"
        android:layout_width="fill_parent"
        android:layout_height="24.0dip"
        android:layout_marginTop="24.0dip"
      >
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="106.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="忘记密码"
            android:textSize="20.0dip"
            android:textColor="@color/blue_text" />
         <View
            android:layout_width="106.0dip"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_text" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/btn_signin"
        android:layout_width="300.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24.0dip"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:text="登录"
        android:textSize="22.0dip"
        android:textColor="@color/white" />
    </LinearLayout>



</LinearLayout>