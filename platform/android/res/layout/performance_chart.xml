<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativelayout_title"
        android:layout_width="wrap_content"
        android:layout_height="48.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
         android:background="@color/white"
        android:gravity="center" >

        <TextView
            android:id="@+id/charviewtitle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="fill_vertical"
            android:text="经营业绩"
            android:textColor="@color/black_text"
            android:textSize="20.0dip" />
        
        <TextView
            android:id="@+id/showdata"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="fill_vertical"
             android:layout_alignParentRight="true"
            android:text="￥4500.00"
            android:textColor="@color/black_text"
            android:textSize="20.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/annularLayout"
        android:layout_width="fill_parent"
        android:layout_height="180.0dip"
        android:background="@color/white"
        android:orientation="horizontal" >
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="12.0dip"
    />
    
    <LinearLayout
        android:id="@+id/performacncetext"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:background="@color/white"
        android:orientation="vertical" >
        
         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
             >

            <ImageView
                android:id="@+id/sevicesicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/up" />

            <TextView
                android:id="@+id/sevice"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/sevicesicon"
                android:gravity="fill_vertical"
                android:text="服务业绩"
                android:textColor="@color/black"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/sevicedata"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="fill_vertical"
                android:text="￥2000.0"
                android:textColor="@color/gray_text"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/comparedata"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/sevicesicon"
                android:layout_marginLeft="24.0dip"
                android:gravity="fill_vertical"
                android:text="比昨日：-638 -60%"
                android:textColor="@color/gray_text"
                android:textSize="16.0dip" />
        </RelativeLayout>
        
          <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
             >

            <ImageView
                android:id="@+id/saleicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/up" />

            <TextView
                android:id="@+id/sale"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/saleicon"
                android:gravity="fill_vertical"
                android:text="卖品业绩"
                android:textColor="@color/black"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/sevicedata"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="fill_vertical"
                android:text="￥2000.0"
                android:textColor="@color/gray_text"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/comparedata"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/saleicon"
                android:layout_marginLeft="24.0dip"
                android:gravity="fill_vertical"
                android:text="比昨日：-638 -60%"
                android:textColor="@color/gray_text"
                android:textSize="16.0dip" />
        </RelativeLayout>
        
           <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
             >

            <ImageView
                android:id="@+id/cardicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/up" />

            <TextView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/cardicon"
                android:gravity="fill_vertical"
                android:text="开卡业绩"
                android:textColor="@color/black"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/sevicedata"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="fill_vertical"
                android:text="￥2000.0"
                android:textColor="@color/gray_text"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/comparedata"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/cardicon"
                android:layout_marginLeft="24.0dip"
                android:gravity="fill_vertical"
                android:text="比昨日：-638 -60%"
                android:textColor="@color/gray_text"
                android:textSize="16.0dip" />
        </RelativeLayout>
        
            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
             >

            <ImageView
                android:id="@+id/rechargeicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/up" />

            <TextView
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/rechargeicon"
                android:gravity="fill_vertical"
                android:text="充值业绩"
                android:textColor="@color/black"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/sevicedata"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="fill_vertical"
                android:text="￥2000.0"
                android:textColor="@color/gray_text"
                android:textSize="20.0dip" />
            
            <TextView
                android:id="@+id/comparedata"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/rechargeicon"
                android:layout_marginLeft="24.0dip"
                android:gravity="fill_vertical"
                android:text="比昨日：-638 -60%"
                android:textColor="@color/gray_text"
                android:textSize="16.0dip" />
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>