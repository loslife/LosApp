<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/relativelayout_linkshop"
            android:layout_width="fill_parent"
            android:layout_height="4.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >

            <View
                android:id="@+id/oneline"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/blue_bg" />

            <View
                android:id="@+id/twoline"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_weight="1"
                android:background="@color/lightgray" />

            <View
                android:id="@+id/threeline"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_weight="1"
                android:background="@color/lightgray" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="@color/gray_bg"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/operate"
                style="@style/footbar"
                android:checked="true"
                android:drawableTop="@drawable/operatetab_bg"
                android:text="经营分析"
                android:textColor="@drawable/tabtext_color" />

            <RadioButton
                android:id="@+id/contacts"
                style="@style/footbar"
                android:drawableTop="@drawable/contactstab_bg"
                android:text="会员"
                android:textColor="@drawable/tabtext_color" />

            <RadioButton
                android:id="@+id/setting"
                style="@style/footbar"
                android:drawableTop="@drawable/settingtab_bg"
                android:text="设置"
                android:textColor="@drawable/tabtext_color" />
        </RadioGroup>
    </LinearLayout>

</TabHost>