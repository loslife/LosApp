<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        layout="@layout/main_header" />
    
      <LinearLayout
        android:id="@+id/main_relativelayout_header"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/graywhite"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="4" />

        <ImageView
            android:id="@+id/lefttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/toleft" />

        <TextView
            android:id="@+id/showtime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="2012"
            android:textColor="@color/black_text"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@+id/righttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/toright" />

        <TextView
            android:id="@+id/timetype"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="æ—¥"
            android:textColor="@color/blue_text"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@+id/headmore"
            android:layout_width="wrap_content"
            android:layout_height="22.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/select_shop" />
    </LinearLayout>

      <com.yilos.losapp.common.ScrollLayout 
      android:id="@+id/main_scrolllayout"    
	  android:layout_width="fill_parent"    
	  android:layout_height="0dip"
   	  android:layout_weight="1"
        >
     <include layout="@layout/employee_chart" />
     
     <include layout="@layout/traffic_chart" />
            
     <include layout="@layout/performance_chart" />
     
    </com.yilos.losapp.common.ScrollLayout>
   
</LinearLayout>