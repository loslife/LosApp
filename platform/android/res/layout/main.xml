<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <include
        android:layout_height="50.0dip"
        layout="@layout/main_header" />

    <LinearLayout
        android:id="@+id/main_relativelayout_header"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/graywhite"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lefttime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="左"
            android:textColor="@color/black"
            android:textSize="23.0dip" />

        <TextView
            android:id="@+id/showtime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="2012"
            android:textColor="@color/turquoise"
            android:textSize="23.0dip" />

        <TextView
            android:id="@+id/righttime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右"
            android:textColor="@color/black"
            android:textSize="23.0dip" />
    </LinearLayout>
    
    
    <RelativeLayout
            android:id="@+id/relativelayout_title"
            android:layout_width="330dip"
            android:layout_height="60.0dip" >

            <TextView
                android:id="@+id/charviewtitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/linkshopicon"
                android:layout_marginLeft="24.0dip"
                android:layout_weight="5"
                android:gravity="fill_vertical"
                android:text="员工业绩"
                android:textColor="@color/black"
                android:textSize="23.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />
        </RelativeLayout>

     <LinearLayout
        android:id="@+id/configLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>
    
    <!-- <com.yilos.losapp.ChartView android:layout_width="fill_parent"
     android:id="@+id/myView" android:layout_height="wrap_content" /> -->

</LinearLayout>