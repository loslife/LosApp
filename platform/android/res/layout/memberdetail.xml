<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_height="50.0dip"
        layout="@layout/main_header" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/memberName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/name_icon"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/Text_size_m" />

        <ImageView
            android:id="@+id/linkshopicon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/ladyicon" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_birthday"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/brithdayicon"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="生日 ： "
            android:textColor="@color/gray_text"
            android:textSize="@dimen/Text_size_m" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_birthday"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_memberNo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/membernaicon"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="会员编号  ： "
            android:textColor="@color/gray_text"
            android:textSize="@dimen/Text_size_m" />

        <TextView
            android:id="@+id/memberNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_memberNo"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_joindate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/joindateicon"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="入会时间 ： "
            android:textColor="@color/gray_text"
            android:textSize="@dimen/Text_size_m" />

        <TextView
            android:id="@+id/joindate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_joindate"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_memberPhone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/contacticon"
            android:drawablePadding="5.0dip"
            android:gravity="center_vertical"
            android:text="联系方式 ： "
            android:textColor="@color/gray_text"
            android:textSize="@dimen/Text_size_m" />

        <TextView
            android:id="@+id/memberPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_memberPhone"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

   <View
        android:layout_width="fill_parent"
        android:layout_height="12.0dip"
        android:background="@drawable/viewborder"
    />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="12.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/consumeinfo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="消费信息"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="12.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_cardtype"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="会员卡类型 ： "
            android:textColor="@color/gray_text"
            android:textSize="@dimen/Text_size_m" />

        <TextView
            android:id="@+id/cardtype"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_cardtype"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="12.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_consumetimes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="最近消费："
            android:textColor="@color/gray_text"
            android:textSize="@dimen/Text_size_m" />

        <TextView
            android:id="@+id/consumetimes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_consumetimes"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black_text"
            android:textSize="@dimen/Text_size_m" />
    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="12.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_consumetotal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/Text_size_m"
            android:textColor="@color/gray_text"
            android:text="累计消费 ： " />

        <TextView
            android:id="@+id/consumetotal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_consumetotal"
            android:gravity="center_vertical"
            android:textSize="@dimen/Text_size_m"
            android:textColor="@color/black_text"
            android:text="TextView" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="12.0dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/text_customerprice"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/Text_size_m"
            android:textColor="@color/gray_text"
            android:text="客单价 ： " />

        <TextView
            android:id="@+id/customerprice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/text_customerprice"
            android:gravity="center_vertical"
            android:textSize="@dimen/Text_size_m"
            android:textColor="@color/black_text"
            android:text="TextView" />
    </RelativeLayout>
    

    <View
        android:layout_width="fill_parent"
        android:layout_height="12px"
        android:background="@color/base_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/teltomember"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/telicon"
                android:gravity="center"
                android:text="给ta电话"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/Text_size_m" />
        </RelativeLayout>
         <View
        android:layout_width="1px"
        android:layout_height="80.0dip"
        android:background="@color/base_bg" />

        <RelativeLayout
            android:id="@+id/msgtomember"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:layout_weight="1"
            android:gravity="center" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/messageicon"
                android:gravity="center"
                android:text="发送短信"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/Text_size_m" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>