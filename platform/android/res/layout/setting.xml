<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_height="50.0dip"
        layout="@layout/main_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativelayout_linkshop"
             android:layout_width="wrap_content"
            android:layout_height="80.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip" >

            <ImageView
                android:id="@+id/linkshopicon"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/linkshop" />

            <TextView
                android:id="@+id/linkshop"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/linkshopicon"
                android:layout_marginLeft="24.0dip"
                android:layout_weight="5"
                android:gravity="fill_vertical"
                android:text="关联店铺"
                android:textColor="@color/black"
                android:textSize="23.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_modfiypwd"
             android:layout_width="wrap_content"
            android:layout_height="80.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip">

            <ImageView
                android:id="@+id/modfiypwdicon"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/modfiypwd" />

            <TextView
                android:id="@+id/modfiypwd"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/modfiypwdicon"
                 android:layout_marginLeft="24.0dip"
                android:layout_weight="5"
                android:gravity="fill_vertical"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="23.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_aboutlos"
            android:layout_width="wrap_content"
            android:layout_height="80.0dip"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip" >

            <ImageView
                android:id="@+id/aboutlosicon"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:src="@drawable/aboutlos" />

            <TextView
                android:id="@+id/aboutlos"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                 android:layout_marginLeft="24.0dip"
                android:layout_toRightOf="@+id/aboutlosicon"
                android:layout_weight="5"
                android:gravity="fill_vertical"
                android:text="关于乐斯"
                android:textColor="@color/black"
                android:textSize="23.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="330.0dip"
        android:layout_height="48.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24.0dip"
        android:background="@drawable/quit_bg"
        android:gravity="center"
        android:text="退出"
        android:textColor="@android:color/white" />


</LinearLayout>